<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1" >
        <% for( let place of list  ) { %>
            <a href="/listings/<%= place._id %>" class="listing-link">
                <div class="card col">
                    <img src="<%= place.image %>" class="card-img-top" alt="listing" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text"><b><%= place.title  %></b> <br> &#8377;<%= place.price.toLocaleString('en-IN') %> / night</p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
</body>
