<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-6 offset-3">
            <h2 class="mb-5">Edit your Listing</h2>
            <form method="POST" action="/listings/<%= data._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-5">
                    <label for="title" class="form-label fw-bold"><span class="text-danger">* </span>Title</label>
                    <input type="text" id="title" class="form-control" name="listing[title]" value="<%= data.title %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                </div>

                <div class="mb-5">
                    <label for="description" class="form-label fw-bold"><span class="text-danger">*
                        </span>Description</label>
                    <textarea class="form-control" name="listing[description]"
                        required> <%= data.description %></textarea>
                    <div class="invalid-feedback">
                        Please enter a short description.
                    </div>
                    <div class="valid-feedback">
                        Description looks good!
                    </div>
                </div>

                <div class="mb-5">
                    Original image<br> 
                    <img src="<%= original %>" alt="">
                </div>
                <div class="mb-5">
                    <label for="image" class="form-label fw-bold"><span class="text-danger">* </span>Upload Image</label>
                    <input type="file" id="image" class="form-control" name="listing[image]" ">
                    <div class="invalid-feedback">
                        Please enter a image link.
                    </div>
                    <div class="valid-feedback">
                        Image link looks good!
                    </div>
                </div>

                <div class="mb-5">
                    <label for="price" class="form-label fw-bold"><span class="text-danger">* </span>Price</label>
                    <input type="number" id="price" class="form-control" name="listing[price]" value="<%= data.price %>"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                    <div class="valid-feedback">
                        Price looks good!
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-5">
                            <label for="location" class="form-label fw-bold"><span class="text-danger">*
                                </span>Location</label>
                            <input type="text" id="location" class="form-control" name="listing[location]"
                                value="<%= data.location %>" required>
                            <div class="invalid-feedback">
                                Please enter a location.
                            </div>
                            <div class="valid-feedback">
                                Location looks good!
                            </div>
                        </div>

                    </div>

                    <div class="col-md-7">
                        <div class="mb-5">
                            <label for="country" class="form-label fw-bold"><span class="text-danger">*
                                </span>Country</label>
                            <input type="text" id="country" class="form-control" name="listing[country]"
                                value="<%= data.country %>" required>
                            <div class="invalid-feedback">
                                Please enter a country name.
                            </div>
                            <div class="valid-feedback">
                                Country name looks good!
                            </div>
                        </div>
                    </div>
                </div>
                <p class="text-center"><button class="btn add-btn mb-3">Edit</button></p>
            </form>
        </div>
    </div>
