<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-6 offset-3">

            <h2 class="mb-5">Cretae a New Listing</h2>
            <form action="/listings" method="POST" class="needs-validation" novalidate>
                <div class="mb-5">
                    <label for="title" class="form-label fw-bold"><span class="text-danger">* </span>Title</label>
                    <input type="text" class="form-control" id="title" name="listing[title]"
                        placeholder="Enter catchy title" required>
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                    <div class="valid-feedback">
                        Title looks good!
                    </div>
                </div>

                <div class="mb-5">
                    <label for="description" class="form-label fw-bold"><span class="text-danger">*
                        </span>Description</label>
                    <textarea name="listing[description]" class="form-control" id="description"
                        placeholder="Enter your description" required></textarea>
                    <div class="invalid-feedback">
                        Please enter a short description.
                    </div>
                    <div class="valid-feedback">
                        Description looks good!
                    </div>
                </div>

                <div class="mb-5">
                    <label for="image" class="form-label fw-bold"><span class="text-danger">* </span>Image</label>
                    <input type="text" id="image" class="form-control" name="listing[image]"
                        placeholder="Enter image link">
                </div>

                <div class="mb-5">
                    <label for="price" class="form-label fw-bold"><span class="text-danger">* </span>Price</label>
                    <input type="number" id="price" class="form-control" name="listing[price]" placeholder="â‚¹2,000"
                        required>
                    <div class="invalid-feedback">
                        Please enter a valid price.
                    </div>
                    <div class="valid-feedback">
                        Price looks good!
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-5">
                            <label for="location" class="form-label fw-bold"><span class="text-danger">*
                                </span>Location</label>
                            <input type="text" id="location" class="form-control" name="listing[location]"
                                placeholder="Chennai, Tamil Nadu" required>
                            <div class="invalid-feedback">
                                Please enter a location.
                            </div>
                            <div class="valid-feedback">
                                Location name looks good!
                            </div>
                        </div>

                    </div>

                    <div class="col-md-7">
                        <div class="mb-5">
                            <label for="country" class="form-label fw-bold"><span class="text-danger">*
                                </span>Country</label>
                            <input type="text" id="country" class="form-control" name="listing[country]"
                                placeholder="India" required>
                            <div class="invalid-feedback">
                                Please enter a country name.
                            </div>
                            <div class="valid-feedback">
                                Country name looks good!
                            </div>
                        </div>

                    </div>

                </div>
                <p class="text-center"><button class="btn add-btn mb-3">Add</button></p>
            </form>
        </div>
    </div>